<h1><% @recipe.each_slice(3) do |recipes| %></h1>
<div class="row">
	<% recipes.each do |recipe| %>
	<div class="col-md-4">
		<div class="recipe">
			<div class="image_wrapper">
				<%= link_to image_tag(recipe.image.url(:medium)), recipe %>
				<h2><%= link_to recipe.title, recipe %></h2>
			</div>
		</div>
	</div>
	<% end %>
</div>
<% end %>